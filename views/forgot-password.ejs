<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      rel="icon"
      href="https://www.shareicon.net/data/128x128/2016/06/27/787351_multimedia_512x512.png"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Password Reset | HireO</title>
    <style>
      body {
        background: rgb(18, 18, 18);
        background: radial-gradient(
          circle,
          rgba(18, 18, 18, 1) 0%,
          rgba(24, 24, 24, 1) 100%
        );
        color: #e0e0e0;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        overflow-x: hidden;
      }

      .container {
        background-color: rgba(34, 34, 34, 0.9);
        margin: auto;
        display: flex;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        width: 30%;
        margin-top: 8rem;
        padding: 2rem;
        border-radius: 8px;
      }

      form {
        display: flex;
        flex-direction: column;
      }

      .emailp {
        font-weight: bold;
        letter-spacing: 1px;
        color: #cfcfcf;
      }

      label {
        font-weight: bold;
        text-align: left;
        margin-left: 5px;
        padding-bottom: 8px;
        padding-top: 8px;
        letter-spacing: 1px;
        color: #e0e0e0;
      }

      input {
        padding-left: 10px;
        padding-right: 10px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid #555;
        background-color: #333;
        color: #e0e0e0;
        margin-bottom: 1rem;
      }

      button {
        margin-top: 1rem;
        padding: 10px;
        color: black;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        background: white;
        border: none;
      }

      button:disabled {
        background: #555;
        cursor: not-allowed;
      }

      @media only screen and (max-width: 720px) {
        body {
          padding-top: 15rem;
        }
        .container {
          width: calc(100% - 100px);
        }
      }

      @media only screen and (max-width: 480px) {
        .container {
          margin: 20px;
        }
      }
    </style>
<script>
  var status = '<%- JSON.stringify(status) %>';

  function validateAndSubmit(e) {
    event.preventDefault()  
     var password = document.getElementById("password").value;
    var confirmPassword = document.getElementById("confirmPassword").value;

    if (password.length < 6) {
      alert("Password should be at least 6 characters long.");
      return;
    }

    if (password !== confirmPassword) {
      alert("Password does not match.");
      return;
    }else{
      var submitButton = document.getElementById("submitButton");
    submitButton.innerHTML = 'Submitting...';

    document.getElementById("resetForm").submit();
    }

  }

  window.onload = function () {
    if (status === "password updated") {
      alert("Password updated successfully. Please log in.");
    }
  };
</script>
  </head>

  <body>
    <div class="container">
      <h2>Password Reset</h2>
      <p class="emailp">Your Email: <%= email %></p>
      <form id="resetForm" action="/api/v1/user/resetpassword/<%= id %>/<%= token %>" method="post" onsubmit="validateAndSubmit(event);">
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required />

        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" id="confirmPassword" name="confirmPassword" required />

        <button type="submit" id="submitButton">Change Password</button>
      </form>
    </div>
  </body>
</html>
